<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".SecondFragment">

    <!--    标题栏-->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liftOnScroll="false">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_edit"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/top_app_bar2"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:title="Guide" />
        <!--        scroll|enterAlways|snap-->
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/guide_search"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/et_style"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="32px"
                    android:text="景点推荐"
                    android:textAppearance="?attr/textAppearanceHeadline6" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="32px"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/guide_p1"
                        android:layout_width="10dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/scenery1"
                        android:adjustViewBounds="true"
                        android:scaleType="fitStart" />
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_weight="0.1"/>
                    <ImageView
                        android:id="@+id/guide_p2"
                        android:layout_width="10dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/scenery2"
                        android:adjustViewBounds="true"
                        android:scaleType="fitStart"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="32px"
                    android:layout_marginTop="150dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="断桥残雪"
                        android:textSize="16sp" />
                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_weight="0.1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:text="     京杭大运河"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="32px"
                    android:layout_marginTop="200dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/guide_p3"
                        android:layout_width="10dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/scenery3"
                        android:adjustViewBounds="true"
                        android:scaleType="fitStart" />
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_weight="0.1"/>
                    <ImageView
                        android:id="@+id/guide_p4"
                        android:layout_width="10dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/scenery4"
                        android:adjustViewBounds="true"
                        android:scaleType="fitStart"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="32px"
                    android:layout_marginTop="310dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="灵隐寺"
                        android:textSize="16sp" />
                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_weight="0.1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:text="     西溪湿地"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="32px"
                    android:text="热门商场"
                    android:textAppearance="?attr/textAppearanceHeadline6"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="32px"
                android:layout_marginRight="32px"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/guide_p5"
                    android:layout_width="10dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/scenery1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart" />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_weight="0.1"/>
                <ImageView
                    android:id="@+id/guide_p6"
                    android:layout_width="10dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/scenery2"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="32px"
                android:layout_marginRight="32px"
                android:layout_marginTop="150dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="断桥残雪"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_weight="0.1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="     京杭大运河"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="32px"
                android:layout_marginRight="32px"
                android:layout_marginTop="200dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/guide_p7"
                    android:layout_width="10dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/scenery3"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart" />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_weight="0.1"/>
                <ImageView
                    android:id="@+id/guide_p8"
                    android:layout_width="10dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/scenery4"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="32px"
                android:layout_marginRight="32px"
                android:layout_marginTop="310dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="灵隐寺"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_weight="0.1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="     西溪湿地"/>
            </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>























